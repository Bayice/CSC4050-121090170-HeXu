    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/kb/",
            "cwd": "${workspaceFolder}",
            "args": [
                "generate",
                "--tmpl", "${workspaceFolder}/templates/kprobe.c.tmpl,${workspaceFolder}/templates/load.go.tmpl",
                "--conf", "${workspaceFolder}/configs/default.toml",
                "--header", "${workspaceFolder}/headers",
                "--output-dir", "${workspaceFolder}/output"
            ],
        }
    ]
}